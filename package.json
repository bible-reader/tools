{
  "name": "bible-reader-tools",
  "repository": {
    "type": "git",
    "url": "https://github.com/bible-reader/tools.git"
  },
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "lerna": "^2.7.0"
  },
  "workspaces": ["packages/*"],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  }
}
