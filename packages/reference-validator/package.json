{
  "name": "@bible-reader/reference-validator",
  "version": "0.9.0",
  "description": "Validator for Bible coordinates.",
  "repository": {
    "type": "git",
    "url": "https://github.com/bible-reader/tools.git"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "prepare": "tsc -p tsconfig.build.json",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "bible",
    "reference",
    "validator"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "Pavel Struhar",
  "license": "MIT",
  "dependencies": {
    "@bible-reader/common": "^0.9.0",
    "@bible-reader/types": "^0.9.0",
    "@types/node": "^8.0.2"
  },
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "jest": "^23.6.0",
    "prettier": "^1.4.4",
    "ts-jest": "^23.10.4",
    "ts-node": "^3.1.0",
    "tslint": "^5.4.3",
    "tslint-config-prettier": "^1.1.0",
    "typescript": "^3.1.6"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
